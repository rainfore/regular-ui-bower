// Component:       `m-listview`
// ========================================================================

.m-listview {
    @extend .f-lsn;
    $box-sizing: border-box;
    $user-select: none;
    // overflow-x: auto;
    // overflow-y: visible;
    
    > li {
        // @extend .f-toe;
        cursor: pointer;
    }

    > li:hover {}

    > li.z-sel {}

    > li.z-dis {
        cursor: not-allowed;
        background: none;
    }
}

.m-listview.z-dis {
    > li {
        cursor: not-allowed;
        background: none;
    }
}
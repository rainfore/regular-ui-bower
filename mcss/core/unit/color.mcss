// Component:       `u-color`
// ========================================================================

.u-color {
    display: inline-block;
    vertical-align: middle;
    text-align: center;
    background: white;
    color: white;
}



// Color Extends:
// ========================================================================

$u-color-extend_color = ($name, $background) {

.u-color-#{$name} {
    background: $background;
}

}
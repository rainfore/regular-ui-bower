// Component:       `u-dropdown-menu`
// ========================================================================

.u-dropdown-menu {
    .menu_list {}

    li {
        position: relative;
    }

    li > .menu_list {
        display: none;
        position: absolute;
        left: 100%;
        top: 0;
    }
        
    li:hover:not(.z-dis) > .menu_list {
        display: block;
    }

    .menu_item {
        position: relative;

        .u-icon {
            position: absolute;
            right: -0.6em;
            line-height: inherit;
            margin: 0;
            cursor: pointer;
        }
    }

    .menu_itemname {
        > a {
            display: block;
        }
    }
}
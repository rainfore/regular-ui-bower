@import "../../core/module/modal.mcss";

// Variables:
// ========================================================================

$m-modal_dialog_border = 2px solid #ddd;

// Component:       `m-modal`
// ========================================================================

.m-modal {
    // - Mask the background page
    background: fade(black, 0.6, true);

    .modal_dialog {
        width: 600px;
        background: white;
        $border: $m-modal_dialog_border; // #999
        $border-radius: $border-radius-lg;
        $box-shadow: 0 3px 9px rgba(0, 0, 0, .5);
        // - Set style
        // - Slide-in transition
        // opacity: 0;
        // -webkit-transform: translateY(-100px);
        // transform: translateY(-100px);
        // -webkit-transition: opacity 0.3s linear, -webkit-transform 0.3s ease-out;
        // transition: opacity 0.3s linear, transform 0.3s ease-out;
        
        .modal_hd {
            padding: 10px 15px;
            background: #f5f5f5;
            border-bottom: $m-modal_dialog_border;

            .modal_title {
                font-size: 18px;
                line-height: $line-height-base;
            }

            .modal_close {
                margin: 0;
                // margin: -2px 0px 0 0;
                font-size: 16px;
                color: #bbb;

                &:hover {
                    color: #888;
                }
            }
        }

        .modal_bd {
            padding: 15px;
            min-height: 10px;
        }

        .modal_ft {
            padding: 15px;
            text-align: center;

            .u-btn + .u-btn {
                margin-left: 5px;
            }
        }
    }

    // - Phone landscape and smaller
    @media (max-width: $media-sm-max-width) {
        // - Fit in small screen
        .modal_dialog {
            margin: 10px;
        }
    }
}
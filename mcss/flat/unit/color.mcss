@import "../../core/unit/color.mcss";

// Variables:
// ========================================================================

$u-color_size = 128px;



// Component:       `u-color`
// ========================================================================

.u-color {
    $size: $u-color_size;
    line-height: $u-color_size;
}



// Color Extends:
// ========================================================================

// $u-color-extend_color = (default, $brand-default);
$u-color-extend_color(primary, $brand-secondary);
$u-color-extend_color(info, $brand-info);
$u-color-extend_color(success, $brand-success);
$u-color-extend_color(warning, $brand-warning);
$u-color-extend_color(error, $brand-error);
$u-color-extend_color(secondary, $brand-primary);
$u-color-extend_color('gray', $gray);
$u-color-extend_color(graylight, $gray-light);
$u-color-extend_color(inverse, $inverse);
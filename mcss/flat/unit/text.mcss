@import "../../core/unit/text.mcss";

// Variables:
// ========================================================================

.u-text {}



// Size Extends:
// ========================================================================

$u-text-extend_size(sm, 12px, 16px);
$u-text-extend_size(lg, 18px, 24px);



// Color Extends:
// ========================================================================

$u-text-extend_color(primary, $brand-secondary);
$u-text-extend_color(success, $state-success_color);
$u-text-extend_color(warning, $state-warning_color);
$u-text-extend_color(error, $state-error_color);
$u-text-extend_color(inverse, $inverse);
$u-text-extend_color(muted, $gray-light);
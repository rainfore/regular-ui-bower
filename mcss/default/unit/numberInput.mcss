.u-numberinput {
    .u-btn {
        right: 2px;
        top: 2px;
        $line-height: $height-base / 2 - $border-width-base * 2 - 1px;
        padding: 0 4px;
    }

    .u-btn + .u-btn {
        top: auto;
        bottom: 2px;
    }
}
@import "../../core/module/form.mcss";

// Component:       `m-form`
// ========================================================================

.m-form {
    legend {
        font-size: $font-size-lg;
        border-bottom: 1px solid $border-base;
        line-height: $height-base;
        margin: 15px 0;
        color: #777;
    }

    > .u-formitem, fieldset > .u-formitem {
        @extend .u-formitem-block;
        min-height: $height-base;
        margin-bottom: 1em;
    }
}
@import "../../core/base/var.mcss";

// Variables:
// ========================================================================

/* Brand Colors */
$brand-default =                        #f4f4f4;
$brand-primary =                        #3c8dbc;
$brand-info =                           #00c0ef;
$brand-success =                        #00a65a;
$brand-warning =                        #f39c12;
$brand-error =                          #dd4b39;

$background-base = $brand-default;
$color-base = #444;
$border-base = #ddd;

/* Form Controls */
$u-formctrl_padding = 4px 6px;
$u-formctrl-sm_padding = 3px 3px;
$u-formctrl-lg_padding = 8px 6px;

$u-formctrl_height = 30px;
$u-formctrl-sm_height = 25px;
$u-formctrl-lg_height = 40px;

$u-formctrl-sm_font-size = 12px;
$u-formctrl-lg_font-size = 16px;

$u-formctrl_min-width = 120px;

$u-formctrl_background = white;
$u-formctrl_color = #444;
$u-formctrl_border = #ddd;
$u-formctrl_border-width-base = 1px;

$u-formctrl-focus_background = #f5fbfe;
$u-formctrl-focus_color = #444;
$u-formctrl-focus_border = #99baca;

$u-formctrl-disabled_background = #f5f5f5;
$u-formctrl-disabled_color = #999;
$u-formctrl-disabled_border = #ddd;

$u-formctrl_placeholder_color = #999;


$u-formctrl_item_padding = 0 10px;
$u-formctrl_item-hover_background = #eee;
$u-formctrl_item-hover_color = #444;
$u-formctrl_item-hover_border = null;

$u-formctrl_item-selected_background = $brand-primary;
$u-formctrl_item-selected_color = white;
$u-formctrl_item-selected_border = null;
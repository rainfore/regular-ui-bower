@import "../../core/unit/thumbnail.mcss";

// Component:       `u-badge`
// ========================================================================

.u-thumbnail {
    padding: 4px;
    $border: #ddd;
    background: #fff;


    .thumbnail_caption {
        margin-top: 4px;
        color: #444;
    }
}

/* Hover */
a.u-thumbnail:hover,
a.u-thumbnail:focus {
    border-color: #aaa;
    background: #fff;
}



// Size Extends:
// ========================================================================

$u-thumbnail-extend_size(xs, 150px);
$u-thumbnail-extend_size(sm, 200px);
$u-thumbnail-extend_size(lg, 300px);
$u-thumbnail-extend_size(xl, 400px);
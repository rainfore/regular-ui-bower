@import "../../core/unit/message.mcss";

// Variables:
// ========================================================================

$u-message_color = #333;



// Component:       `u-message`
// ========================================================================

.u-message {
    padding: 15px;
    background: #f5f5f5;
    color: $u-message_color;
    $border-radius: $border-radius-base;
    $border: #ddd;

    .message_close {
        color: fade($u-message_color, 0.75, true);
        &:hover {
            color: $u-message_color;
        }
    }
}



// Color Extends:       `u-message-info`, `u-message-success`, `u-message-warning`, `u-message-error`
// ========================================================================

$u-message-extend_color = ($name, $background, $color, $border_) {
    .u-message-#{$name} {
        background: $background;
        @if($color) {
            color: $color;
            .message_close {
                color: fade($color, 0.75, true);
                &:hover {
                    color: $color;
                }
            }
        }
        @if($border) {$border: $border_;}
    }
}

$u-message-extend_color(info, $state-info_background, $state-info_color, $state-info_border);
$u-message-extend_color(success, $state-success_background, $state-success_color, $state-success_border);
$u-message-extend_color(warning, $state-warning_background, $state-warning_color, $state-warning_border);
$u-message-extend_color(error, $state-error_background, $state-error_color, $state-error_border);
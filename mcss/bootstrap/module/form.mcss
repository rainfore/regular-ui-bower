@import "../../core/module/form.mcss";

// Component:       `m-form`
// ========================================================================

.m-form {
    legend {
        font-size: $font-size-base * 1.3;
        border-bottom: 1px solid #e5e5e5;
        line-height: 30px;
        margin: 15px 0;
        color: $gray-dark;
    }

    > .u-formitem, fieldset > .u-formitem {
        @extend .u-formitem-block;
        margin-bottom: 1em;
    }
}
@import "../../core/module/crumb.mcss";

// Component:       `m-crumb`
// ========================================================================

.m-crumb {
    padding: 8px 15px;
    background: #f5f5f5;
    color: #777;
    $border-radius: $border-radius-base;

    > li + li:before {
        content: '/';
        margin: 0 8px;
        color: #777;
    }
}
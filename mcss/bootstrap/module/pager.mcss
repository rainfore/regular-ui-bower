@import "../../core/module/pager.mcss";

// Variables:
// ========================================================================

$m-pager_li_a_size = 32px;



// Component:       `m-pager`
// ========================================================================

.m-pager {
    > li {
        > a, > span {
            padding: 0 12px;
            min-width: $m-pager_li_a_size - 12px*2;
            $line-height: $m-pager_li_a_size;
            // background: #eee;
            // color: $brand-primary;
        }

        > a {
            background: white;
            border: 1px solid #ddd;
        }

        > a:hover, > a:focus {
            background: $gray-lighter;
            // color: #444;
        }

        > a:active {
            background: $brand-primary;
            color: white;
            border-color: $brand-primary;
        }
    }

    >li.z-crt > a {
        background: $brand-primary;
        color: white;
        border-color: $brand-primary;
    }

    >li.z-dis > a {
        background: $formctrl-disabled_background;
        color: $formctrl-disabled_color;
        border-color: #ddd;
    }

    > li + li {
        margin-left: -1px;
    }

    > li:first-child > a {
        $border-radius: $border-radius-base 0 0 $border-radius-base;
    }

    > li:last-child > a {
        $border-radius: 0 $border-radius-base $border-radius-base 0;
    }
}

/* Disabled */
.m-pager.z-dis {
    > li {
        > a {
            background: $formctrl-disabled_background;
            color: $formctrl-disabled_color;
            border-color: #ddd;
        }
    }
}